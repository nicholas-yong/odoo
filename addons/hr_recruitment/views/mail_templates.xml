<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="refuse_reason_template" model="mail.template">
    <field name="name">Refuse Reason Email Template</field>
    <field name="model_id" ref="model_applicant_get_refuse_reason"/>
    <field name="auto_delete" eval="True"/>
    <field name="email_from">${object.create_uid.email}</field>
    <field name="email_to">${object.applicant_ids.email_from}</field>
    <field name="subject">Your Application has been refused</field>
    <field name="body_html"><![CDATA[
        <p>Dear<br/><br/>
        Good job, you've just created your first e-mail template!<br/></p>]]>
    </field>
</record>
</odoo>
